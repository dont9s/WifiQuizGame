<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:layout_height="match_parent"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:id="@+id/device_deatail_screen"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

        android:gravity="center_horizontal">



        <Button
            android:theme="@style/AppTheme.Button"
            android:text="@string/connect_text"
            android:id="@+id/connect_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/device_detail_text"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/groupOwnerCheck"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inetAddressText"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/someOtherInfoText"

            />


        <ProgressBar
            android:visibility="gone"
            android:layout_width="@dimen/custom_dialog_width_height"
            android:layout_height="@dimen/custom_dialog_width_height"
            android:theme="@style/AppTheme.ProgressDialogue"
            android:id="@+id/device_detail_connect_progress"
            />


    </LinearLayout>
</FrameLayout>